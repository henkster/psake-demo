<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <XUnitProjectOutputDirectory>$(OutDir)_PublishedxUnitTests\$(MSBuildProjectName)</XUnitProjectOutputDirectory>
  </PropertyGroup>

  <PropertyGroup>
    <PrepareForRunDependsOn>
      $(PrepareForRunDependsOn);
      _CopyxUnitTests
    </PrepareForRunDependsOn>
  </PropertyGroup>
  
  <!--  ============================================================  _CopyNUnitTests   This target will copy the build outputs along with the   content files into a _PublishedxUnitTests folder.    This Task is only necessary when $(OutDir) has been redirected  to a folder other than ~\bin such as is the case with Team Build.  ============================================================  -->  <Target Name="_CopyxUnitTests" Condition="'$(OutDir)' != '$(OutputPath)'">    <!-- Log tasks -->    <Message Text="Copying Application Project Files for $(MSBuildProjectName)" />    <!-- Create the _PublishedxUnitTests\app\ folder -->    <MakeDir Directories="$(XUnitProjectOutputDirectory)" />    <!-- Copy build outputs to _PublishedxUnitTests\app\ folder -->    <Copy SourceFiles="@(IntermediateAssembly)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true"/>    <Copy SourceFiles="@(AddModules)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true"/>    <Copy SourceFiles="$(IntermediateOutputPath)$(_SGenDllName)" DestinationFolder="$(XUnitProjectOutputDirectory)\%(Content.SubFolder)%(Content.RecursiveDir)" SkipUnchangedFiles="true" Condition="'$(_SGenDllCreated)'=='true'"/>    <Copy SourceFiles="$(IntermediateOutputPath)$(TargetName).pdb" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true" Condition="'$(_DebugSymbolsProduced)'=='true'"/>    <Copy SourceFiles="@(DocFileItem)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true" Condition="'$(_DocumentationFileProduced)'=='true'"/>    <Copy SourceFiles="@(IntermediateSatelliteAssembliesWithTargetPath)" DestinationFiles="@(IntermediateSatelliteAssembliesWithTargetPath->'$(XUnitProjectOutputDirectory)\%(Culture)\$(TargetName).resources.dll')" SkipUnchangedFiles="true"/>    <Copy SourceFiles="@(ReferenceComWrappersToCopyLocal); @(ResolvedIsolatedComModules); @(_DeploymentLooseManifestFile); @(NativeReferenceFile)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true"/>    <!-- copy any referenced assemblies to _PublishedxUnitTests\app\ folder -->    <Copy SourceFiles="@(ReferenceCopyLocalPaths)" DestinationFiles="@(ReferenceCopyLocalPaths->'$(XUnitProjectOutputDirectory)\%(DestinationSubDirectory)%(Filename)%(Extension)')" SkipUnchangedFiles="true"/>    <!-- Copy content files recursively to _PublishedxUnitTests\app\ folder -->    <Copy SourceFiles="@(Content)" Condition="'%(Content.Link)' == ''" DestinationFolder="$(XUnitProjectOutputDirectory)\%(Content.RelativeDir)" SkipUnchangedFiles="true"/>    <Copy SourceFiles="@(Content)" Condition="'%(Content.Link)' != ''" DestinationFiles="$(XUnitProjectOutputDirectory)\%(Content.Link)" SkipUnchangedFiles="true"/>    <!-- Copy items that have been marked to be copied to the output folder -->    <Copy SourceFiles="@(_SourceItemsToCopyToOutputDirectory)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="true"/>    <Copy SourceFiles="@(_SourceItemsToCopyToOutputDirectoryAlways)" DestinationFolder="$(XUnitProjectOutputDirectory)" SkipUnchangedFiles="false"/>    <!-- Copy items that need to be bin deployed to the output folder -->    <Copy SourceFiles="@(_binDeployableAssemblies)" DestinationFolder="$(XUnitProjectOutputDirectory)\%(RecursiveDir)" SkipUnchangedFiles="true"/>    <!-- Copy config files to _PublishedxUnitTests\app\ folder -->    <Copy SourceFiles="$(OutDir)$(TargetFileName).config" DestinationFolder="$(XUnitProjectOutputDirectory)" ContinueOnError="true" SkipUnchangedFiles="true"/>  </Target>
</Project>